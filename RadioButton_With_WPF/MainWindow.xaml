<Window x:Class="RadioButton_With_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButton_With_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Label Content="¿Qué cursos eliges despúes? Elige solo uno." HorizontalAlignment="Center" Margin="0,53,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbPython" Content="Python" HorizontalAlignment="Left" Margin="80,115,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbJavascript" Content="Javascript" HorizontalAlignment="Left" Margin="80,150,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbSqlServer" Content="SQL Server" HorizontalAlignment="Left" Margin="80,185,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSeleccionar" Content="Seleccinar" HorizontalAlignment="Left" Margin="246,125,0,0" VerticalAlignment="Top" Width="74" Height="32" Click="btnSeleccionar_Click"/>

    </Grid>
</Window>
